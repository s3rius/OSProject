<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3rius.surveyclient.fragments.SurveyCreatorFragments.CreateQuestion">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/newQuestText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        android:gravity="start"
        android:hint="@string/new_question" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addQuestionDone"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="addQuestion"
        android:src="@drawable/add_question"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:onClick="onQuestionBack"
        android:src="@drawable/arrow_back"
        app:layout_anchorGravity="bottom|left|end" />
</FrameLayout>
