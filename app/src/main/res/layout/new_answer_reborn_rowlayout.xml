<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newAnswerRowlayout">
<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/answerRadio"
    android:textColor="@color/colorAccent"
    android:clickable="false"
    android:checked="true"
    />
    <EditText
        android:layout_toRightOf="@+id/answerRadio"
        android:id="@+id/newAnswerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_answer"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAnswer"
        android:layout_below="@id/newAnswerText"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/delete_answer"
        />
</RelativeLayout>