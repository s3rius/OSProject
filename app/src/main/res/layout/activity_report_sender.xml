<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s3rius.surveyclient.ReportSenderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mech_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oops_exeption"
                android:textStyle="bold|italic"/>

            <ImageView
                android:id="@+id/thanks_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mech_img"
                android:background="@drawable/mech"
                />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thanks_msg"
                android:id="@+id/close_app"
                android:text="@string/close_app" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
