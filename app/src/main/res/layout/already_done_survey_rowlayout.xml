<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:id="@+id/complete_in_survey_text"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="@string/survey_already_complete"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        />
    <Button
        android:layout_below="@id/complete_in_survey_text"
        android:id="@+id/complete_in_survey_button"
        android:layout_width="match_parent"
        android:background="@drawable/made_by_border"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/open_statistics_without_survey"
        android:layout_height="wrap_content" />
</RelativeLayout>